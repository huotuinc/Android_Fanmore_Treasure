<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_white">
    <RelativeLayout
        android:id="@+id/titleLayoutL"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <include
            layout="@layout/layout_title"/>
        <TextView
            android:id="@+id/textright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发布"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/color_blue"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="@dimen/shareorder_title_height"
        android:layout_centerVertical="true"
        android:id="@+id/orderTitle"
        android:background="@drawable/search_order_bg"
        android:gravity="left|center_vertical"
        android:textColorHint="@color/text_gray"
        android:hint="晒单主题，不少于6个字"
        android:maxLength="13"
        android:paddingLeft="5dp"
        android:layout_margin="10dp"
        android:singleLine="true"
        android:textSize="@dimen/text_size_16"/>
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="@dimen/shareorder_con_height"
            android:id="@+id/orderMsg"
            android:layout_margin="10dp"
            android:gravity="left"
            android:hint="获奖感言，不少于30个字"
            android:textColorHint="@color/text_gray"
            android:padding="3dp"
            android:minLines="10"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/text_black"
            android:background="@drawable/search_order_bg"/>
        <LinearLayout
            android:id="@+id/preImgL"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp">
            <ImageView
                android:layout_width="@dimen/showOrderImageSize"
                android:layout_height="@dimen/showOrderImageSize"
                android:layout_margin="5dp"
                android:id="@+id/addImgBtn"
                android:background="@mipmap/shoreorder"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:background="@color/gray_bg">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
            <TextView
                android:padding="5dp"
                android:id="@+id/shareOrderTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""/>
</LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/shareOrderIusse"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="本期参与:"/>
            <TextView
                android:id="@+id/parentCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textColor="@color/title_bg"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人次"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="幸运号码:"/>
            <TextView
                android:id="@+id/luckyNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/title_bg"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="揭晓时间:"/>
            <TextView
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""/>
        </LinearLayout>

    </LinearLayout>
    </LinearLayout>