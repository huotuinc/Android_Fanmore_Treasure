<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:padding="10dp">
    <RelativeLayout
        android:id="@+id/redpackageResultMsgL"
        android:layout_width="@dimen/radpackage_msg_bg_size"
        android:layout_height="@dimen/radpackage_msg_bg_size"
        android:layout_centerInParent="true"
        android:background="@mipmap/redpackage_success_logo">
        <RelativeLayout
            android:layout_marginTop="@dimen/redpackage_msg_top"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/successTag"
                android:textColor="@color/deep_red"
                android:gravity="center"
                android:textSize="@dimen/text_size_12"
                android:layout_centerHorizontal="true"
                android:text="恭喜你获得1个红包\n可免费获得一次0.5元购买"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <ImageView
                android:id="@+id/successIcon"
                android:layout_below="@+id/successTag"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:layout_width="@dimen/icon_size_20"
                android:layout_height="@dimen/icon_size_30"
                android:background="@mipmap/red_success_tag"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>