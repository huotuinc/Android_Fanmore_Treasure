<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.huotu.fanmore.pinkcatraiders.ui.raiders.WinLogDetailActivity">

    <RelativeLayout
        android:id="@+id/titleLayoutL"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <include
            layout="@layout/layout_title"/>
    </RelativeLayout>
    <com.handmark.pulltorefresh.library.PullToRefreshScrollView
        android:id="@+id/windetailPullRefresh"
        android:layout_below="@+id/titleLayoutL"
        android:layout_width="match_parent"
        android:layout_height="fill_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/account_bg_bottom">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_black"
                android:layout_centerVertical="true"
                android:textSize="@dimen/text_size_18"
                android:text="奖品状态"/>
        </RelativeLayout>
        <!--动态展示奖品状态-->
        <LinearLayout
            android:id="@+id/prizeStatusL"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/color_white">
            <RelativeLayout
                android:id="@+id/status1L"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/status1LeftL"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/winner_confirm_height"
                    android:layout_alignParentLeft="true"
                    android:padding="10dp">
                    <ImageView
                        android:id="@+id/status1Icon"
                        android:layout_width="@dimen/icon_size_2"
                        android:layout_height="@dimen/icon_size_2"
                        android:layout_centerInParent="true"
                        android:background="@mipmap/prize_unselect"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/winner_confirm_height"
                    android:id="@+id/status1RightL"
                    android:padding="10dp"
                    android:background="@drawable/account_bg_bottom"
                    android:layout_toRightOf="@+id/status1LeftL">
                    <TextView
                        android:id="@+id/status1Tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text=""
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/text_size_16"/>
                    <TextView
                        android:id="@+id/status1Time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:text=""
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/text_size_16"/>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
            android:id="@+id/status2L"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/status2LeftL"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/winner_confirm_height"
                android:layout_alignParentLeft="true"
                android:padding="10dp">
                <ImageView
                    android:id="@+id/status2Icon"
                    android:layout_width="@dimen/icon_size_2"
                    android:layout_height="@dimen/icon_size_2"
                    android:layout_centerInParent="true"
                    android:background="@mipmap/prize_unselect"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/winner_confirm_height"
                android:id="@+id/status2RightL"
                android:padding="10dp"
                android:background="@drawable/account_bg_bottom"
                android:layout_toRightOf="@+id/status2LeftL">
                <TextView
                    android:id="@+id/status2Tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text=""
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_size_16"/>
                <TextView
                    android:id="@+id/status2Time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:text=""
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_size_16"/>
            </RelativeLayout>
        </RelativeLayout>
            <RelativeLayout
                android:id="@+id/status3L"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/status3LeftL"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/winner_confirm_height"
                    android:layout_alignParentLeft="true"
                    android:padding="10dp">
                    <ImageView
                        android:id="@+id/status3Icon"
                        android:layout_width="@dimen/icon_size_2"
                        android:layout_height="@dimen/icon_size_2"
                        android:layout_centerInParent="true"
                        android:background="@mipmap/prize_unselect"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/winner_confirm_height"
                    android:id="@+id/status3RightL"
                    android:padding="10dp"
                    android:background="@drawable/account_bg_bottom"
                    android:layout_toRightOf="@+id/status3LeftL">
                    <TextView
                        android:id="@+id/status3Tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text=""
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/text_size_16"/>
                    <TextView
                        android:id="@+id/status3Time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:text=""
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/text_size_16"/>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/status4L"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/status4LeftL"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/winner_confirm_height"
                    android:layout_alignParentLeft="true"
                    android:padding="10dp">
                    <ImageView
                        android:id="@+id/status4Icon"
                        android:layout_width="@dimen/icon_size_2"
                        android:layout_height="@dimen/icon_size_2"
                        android:layout_centerInParent="true"
                        android:background="@mipmap/prize_unselect"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/winner_confirm_height"
                    android:id="@+id/status4RightL"
                    android:padding="10dp"
                    android:background="@drawable/account_bg_bottom"
                    android:layout_toRightOf="@+id/status4LeftL">
                    <TextView
                        android:id="@+id/status4Tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text=""
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/text_size_16"/>
                    <TextView
                        android:id="@+id/status4Time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:text=""
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/text_size_16"/>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/status5L"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/status5LeftL"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/winner_confirm_height"
                    android:layout_alignParentLeft="true"
                    android:padding="10dp">
                    <ImageView
                        android:id="@+id/status5Icon"
                        android:layout_width="@dimen/icon_size_2"
                        android:layout_height="@dimen/icon_size_2"
                        android:layout_centerInParent="true"
                        android:background="@mipmap/prize_unselect"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/winner_confirm_height"
                    android:id="@+id/status5RightL"
                    android:padding="10dp"
                    android:background="@drawable/account_bg_bottom"
                    android:layout_toRightOf="@+id/status5LeftL">
                    <TextView
                        android:id="@+id/status5Tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text=""
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/text_size_16"/>
                    <TextView
                        android:id="@+id/status5Time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:text=""
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/text_size_16"/>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/status6L"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/status6LeftL"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/winner_confirm_height"
                    android:layout_alignParentLeft="true"
                    android:padding="10dp">
                    <ImageView
                        android:id="@+id/status6Icon"
                        android:layout_width="@dimen/icon_size_2"
                        android:layout_height="@dimen/icon_size_2"
                        android:layout_centerInParent="true"
                        android:background="@mipmap/prize_unselect"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/winner_confirm_height"
                    android:id="@+id/status6RightL"
                    android:padding="10dp"
                    android:background="@drawable/account_bg_bottom"
                    android:layout_toRightOf="@+id/status6LeftL">
                    <TextView
                        android:id="@+id/status6Tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text=""
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/text_size_16"/>
                    <TextView
                        android:id="@+id/status6Time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:text=""
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/text_size_16"/>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/addressL"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/account_bg_bottom">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_black"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/text_size_18"
                    android:text="地址信息"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/account_bg_bottom">
                <TextView
                    android:id="@+id/userName"
                    android:textSize="@dimen/text_size_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收货人地址"/>
                <TextView
                    android:id="@+id/userPhone"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/text_size_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1324657890"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/address"
                    android:layout_marginTop="20dp"
                    android:textSize="@dimen/text_size_16"
                    android:layout_below="@+id/userPhone"
                    android:text="浙江省杭州市滨江区智慧E谷B幢5层"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/productL"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/account_bg_bottom">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_black"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/text_size_18"
                    android:text="奖品信息"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/account_bg_bottom"
                android:padding="5dp">
                <ImageView
                    android:id="@+id/pictureUrl"
                    android:layout_width="@dimen/icon_size_4"
                    android:layout_height="@dimen/icon_size_4" />
                <TextView
                    android:layout_toRightOf="@+id/pictureUrl"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:layout_marginLeft="5dp"
                    android:ellipsize="end"
                    android:text="qqwqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqq"
                    android:textSize="@dimen/text_size_16"
                    android:textColor="@color/text_black"
                    android:id="@+id/title"/>
                <TextView
                    android:layout_below="@+id/title"
                    android:layout_toRightOf="@+id/pictureUrl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/issueId"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_size_14"
                    android:text="参与期号:2314141"/>
                <TextView
                    android:layout_toRightOf="@+id/pictureUrl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/toAmount"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="5dp"
                    android:layout_below="@+id/issueId"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_size_14"
                    android:text="总需:50"/>
                <TextView
                    android:layout_toRightOf="@+id/pictureUrl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/partnerCount"
                    android:layout_marginTop="3dp"
                    android:layout_below="@+id/toAmount"
                    android:textColor="@color/text_gray"
                    android:layout_marginLeft="5dp"
                    android:textSize="@dimen/text_size_16"
                    android:text="幸运号码:"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lunkyNumber"
                    android:layout_marginTop="3dp"
                    android:layout_below="@+id/toAmount"
                    android:layout_toRightOf="@id/partnerCount"
                    android:textColor="@color/color_blue"
                    android:textSize="@dimen/text_size_16"
                    android:text="11111111"/>
                <TextView
                    android:layout_toRightOf="@+id/pictureUrl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/attendAmount"
                    android:layout_below="@+id/partnerCount"
                    android:textColor="@color/text_gray"
                    android:layout_marginLeft="5dp"
                    android:textSize="@dimen/text_size_14"
                    android:text="本期参与:3人次"/>
                <TextView
                    android:layout_toRightOf="@+id/pictureUrl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/awardingDate"
                    android:layout_marginLeft="5dp"
                    android:layout_below="@+id/attendAmount"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_size_14"
                    android:text="揭晓时间:2016-01-24  10:04:00"/>
            </RelativeLayout>
        </LinearLayout>
</LinearLayout>
    </com.handmark.pulltorefresh.library.PullToRefreshScrollView>
</RelativeLayout>
