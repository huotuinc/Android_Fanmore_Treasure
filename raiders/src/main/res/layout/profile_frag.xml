<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white">
    <com.handmark.pulltorefresh.library.PullToRefreshScrollView
        xmlns:ptr= "http://schemas.android.com/apk/res-auto"
        android:id="@+id/profilePullRefresh"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        ptr:ptrAnimationStyle= "flip"
        android:background="@color/account_bg">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/morestatistic_title2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/title_bg">
                <RelativeLayout
                    android:id="@+id/userNameL"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <com.huotu.fanmore.pinkcatraiders.widget.CircleImageView
                    android:id="@+id/Userimg"
                    android:layout_width="60dp"
                    android:layout_height="60dp" />
                <TextView
                    android:id="@+id/TVUserName"
                    android:layout_toRightOf="@+id/Userimg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:textColor="@android:color/white"
                    android:text="2222222" />
                </RelativeLayout>
                <LinearLayout
                    android:padding="10dp"
                    android:layout_below="@+id/userNameL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#33000000"
                    android:layout_alignParentBottom="true">
                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_white"
                        android:text="余额:"/>
                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="200元"
                        android:textColor="@color/color_white"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/txtScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="充值"
                        android:background="@drawable/account_draw"
                        android:layout_gravity="center"
                        android:textColor="@color/title_bg" />
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/account_bg_bottom">
                <LinearLayout
                    android:id="@+id/ll1"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/ing"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="正在进行"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll2"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/jiexiao"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="已经揭晓"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/raideLogL"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/ing"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="夺宝记录"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/redpacketL"
                android:layout_width="match_parent"
                android:layout_height="@dimen/profile_item_height"
                android:orientation="horizontal"
                android:background="@color/color_white">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/mine_hongbao"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="红包"
                    android:layout_gravity="center"/>
                <ImageView
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/jinru"/>
            </LinearLayout>
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/profile_item_height"
            android:id="@+id/rechargeLogL"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/account_bg_bottom">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@mipmap/mine_chongzhi"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="充值记录"
                android:layout_gravity="center"/>
            <ImageView
                android:layout_marginRight="5dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/jinru"/>
        </LinearLayout>
            <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/winningLogL"
            android:layout_height="@dimen/profile_item_height"
            android:orientation="horizontal"
            android:background="@drawable/account_bg_bottom">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@mipmap/mine_zhonjiang"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="中奖记录"
                android:layout_gravity="center"/>
            <ImageView
                android:layout_marginRight="5dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/jinru"/>
        </LinearLayout>
            <LinearLayout
                android:id="@+id/shareL"
            android:layout_width="match_parent"
            android:layout_height="@dimen/profile_item_height"
            android:orientation="horizontal"
            android:background="@color/color_white">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:background="@mipmap/mine_shaidan"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="晒单"
                android:layout_gravity="center"/>
            <ImageView
                android:layout_marginRight="5dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/jinru"/>
        </LinearLayout>
            <LinearLayout
                android:id="@+id/settingL"
            android:layout_width="match_parent"
            android:layout_height="@dimen/profile_item_height"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/account_bg_bottom">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:background="@mipmap/mine_shezhi"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="设置"
                android:layout_gravity="center"/>
            <ImageView
                android:layout_marginRight="5dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/jinru"/>
        </LinearLayout>
        </LinearLayout>

    </com.handmark.pulltorefresh.library.PullToRefreshScrollView>
</RelativeLayout>