<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/titleLayoutL"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <include
            layout="@layout/layout_title"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/productDetailL"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/account_bg">
    <com.handmark.pulltorefresh.library.PullToRefreshScrollView
        xmlns:ptr= "http://schemas.android.com/apk/res-auto"
        android:id="@+id/productDetailPullRefresh"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        ptr:ptrAnimationStyle= "flip"
        ptr:ptrMode= "both">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <!--切换图片-->
        <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:layout_height="@dimen/home_switch_img"
            android:id="@+id/productDetailViewPager"
            android:background="@color/color_white">
        </android.support.v4.view.ViewPager>
        <LinearLayout
            android:layout_alignBottom="@+id/productDetailViewPager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="8dp"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/productDetaildot"
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">
            </LinearLayout>
        </LinearLayout>
        <!--切换图片-->
        <!--产品名称-->
        <RelativeLayout
            android:id="@+id/productDetailNameLL"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_below="@+id/productDetailViewPager"
            android:background="@color/color_white">
            <TextView
                android:id="@+id/productDetailNameLabel"
                android:padding="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="进行中"
                android:gravity="center"
                android:textColor="@color/color_white"
                android:textSize="@dimen/text_size_14"
                android:background="@drawable/button_common_1"/>
            <RelativeLayout
                android:id="@+id/productDetailNameL"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/productDetailNameLabel"
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:background="@color/color_white">
                <TextView
                    android:id="@+id/productDetailName"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="贝恩施 儿童玩具 托马斯积木益智玩具轨道火车1688组合装"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_size_14"
                    android:lines="2"/>
            </RelativeLayout>
        </RelativeLayout>
        <!--产品名称-->
        <!--登录状态-->
        <ViewStub
            android:id="@+id/loginedDetail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/productDetailNameLL"
            android:layout="@layout/login_detail">
        </ViewStub>
        <!--登录状态-->
        <!--未登录全价-->
        <ViewStub
            android:id="@+id/unloginFullPrice"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/productDetailNameLL"
            android:layout="@layout/unlogin_funllprice">
        </ViewStub>
        <!--未登录全价-->
        <!--未登录-->
        <ViewStub
            android:id="@+id/unlogin"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/productDetailNameLL"
            android:layout="@layout/unlogin">
        </ViewStub>
        <!--未登录-->
        <!--揭晓详情-->
        <ViewStub
            android:id="@+id/announcedDetail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/productDetailNameLL"
            android:layout="@layout/announced_detail">
        </ViewStub>
        <!--揭晓详情-->
    </RelativeLayout>
    </com.handmark.pulltorefresh.library.PullToRefreshScrollView>
    <RelativeLayout
        android:id="@+id/bottomL"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/bottom_height"
        android:padding="5dp"
        android:background="@drawable/account_bg_draw_top"
        android:layout_alignParentBottom="true">
        <ViewStub
            android:id="@+id/productDetailBottomOther"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:layout="@layout/bottom_other">
        </ViewStub>
        <ViewStub
            android:id="@+id/productDetailBottomAnnounced"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:layout="@layout/bottom_announced">
        </ViewStub>
    </RelativeLayout>
    </RelativeLayout>

</LinearLayout>