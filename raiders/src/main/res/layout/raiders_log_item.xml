<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:padding="5dp">
    <RelativeLayout
        android:layout_alignParentLeft="true"
        android:id="@+id/raidersIconL"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:padding="5dp">
        <ImageView
            android:id="@+id/raidersIcon"
            android:layout_width="@dimen/icon_size_4"
            android:layout_height="@dimen/icon_size_4" />
    </RelativeLayout>
    <RelativeLayout
        android:padding="5dp"
        android:id="@+id/productDetal"
        android:layout_toRightOf="@+id/raidersIconL"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <ViewStub
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/doingL"
            android:layout="@layout/raiders_doing"/>
        <ViewStub
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/doneL"
            android:layout="@layout/raiders_done"/>
    </RelativeLayout>
</RelativeLayout>