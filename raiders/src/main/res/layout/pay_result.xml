<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_white">
    <RelativeLayout
        android:id="@+id/titleLayoutL"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <include
            layout="@layout/layout_title"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_below="@+id/titleLayoutL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/account_bg">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="30dp"
            android:background="@color/color_white">
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/resultTag0"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_22"
                android:text="恭喜您，参与成功！"/>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/resultTag1"
                android:layout_below="@+id/resultTag0"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_22"
                android:text="请等待系统为您揭晓！"/>
            <TextView
                android:id="@+id/carryOnBtn"
                android:layout_below="@+id/resultTag1"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="继续夺宝"
                android:padding="10dp"
                android:gravity="center"
                android:textSize="@dimen/text_size_18"
                android:textColor="@color/color_white"
                android:background="@drawable/button_common_1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看夺宝记录"
                android:layout_toRightOf="@+id/carryOnBtn"
                android:layout_marginLeft="10dp"
                android:id="@+id/showBtn"
                android:layout_alignBaseline="@+id/carryOnBtn"
                android:padding="10dp"
                android:gravity="center"
                android:textSize="@dimen/text_size_18"
                android:textColor="@color/text_black"
                android:background="@drawable/button_common_4"/>
        </RelativeLayout>
        <TextView
            android:layout_margin="10dp"
            android:id="@+id/resultTag"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_16"
            android:text="你成功参与了1件商品共2人次夺宝，信息如下："/>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            android:background="@drawable/button_common_5">
            <TextView
                android:id="@+id/productName"
                android:layout_toLeftOf="@+id/parentCount"
                android:layout_marginRight="10dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_blue"
                android:textSize="@dimen/text_size_16"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="sadada"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:id="@+id/parentCount"
                android:text="sasa"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/text_size_16"/>
            <TextView
                android:id="@+id/issue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sasadas"
                android:layout_below="@+id/productName"
                android:layout_marginTop="5dp"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/text_size_16"/>
            <TextView
                android:id="@+id/number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sasadas"
                android:layout_below="@+id/issue"
                android:layout_marginTop="5dp"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/text_size_16"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>