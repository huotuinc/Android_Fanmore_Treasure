<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/productLL"
    android:padding="1dp"
    android:background="@drawable/grid_item_bg">
    <RelativeLayout
        android:id="@+id/iconL"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/product_height"
        android:id="@+id/productIcon"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/productTag"
        android:layout_alignTop="@+id/productIcon"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:textColor="@color/color_white"
        android:textSize="@dimen/text_size_12"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/productDetailL"
        android:padding="5dp"
        android:layout_below="@+id/iconL"
        android:background="@color/color_white">
        <TextView
            android:id="@+id/productName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_14"/>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/productName"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lotterySchedule"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/text_size_12" />
            <ProgressBar
                android:id="@+id/lotteryScheduleProgress"
                android:layout_below="@+id/lotterySchedule"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/addBtn"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="fill_parent"
                android:layout_height="5dp"
                android:max="100"
                android:progress="50"
                android:progressDrawable="@drawable/progress_draw"/>
            <TextView
                android:id="@+id/addBtn"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/lotteryScheduleProgress"
                android:text="加入清单"
                android:padding="2dp"
                android:gravity="center"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/deep_red"
                android:background="@drawable/add_draw"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>