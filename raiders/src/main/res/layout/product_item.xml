<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/productLL"
    android:background="@drawable/account_product_bg">
    <RelativeLayout
        android:id="@+id/iconL"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/popwin_height"
        android:id="@+id/productIcon"/>
    <ImageView
        android:layout_width="@dimen/icon_size_3"
        android:layout_height="@dimen/icon_size_3"
        android:id="@+id/productTag"
        android:layout_alignTop="@+id/productIcon"
        android:layout_marginLeft="20dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/productDetailL"
        android:padding="10dp"
        android:layout_below="@+id/iconL"
        android:background="@color/color_white">
        <TextView
            android:id="@+id/productName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_14"/>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/productName">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lotterySchedule"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/text_size_12" />
            <ProgressBar
                android:id="@+id/lotteryScheduleProgress"
                android:layout_below="@+id/lotterySchedule"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/addBtn"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="fill_parent"
                android:layout_height="12dp"
                android:max="100"
                android:progress="50"
                android:progressDrawable="@drawable/progress_draw"/>
            <TextView
                android:id="@+id/addBtn"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="加入清单"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:gravity="center"
                android:textColor="@color/deep_red"
                android:layout_alignTop="@+id/lotterySchedule"
                android:layout_alignBottom="@+id/lotteryScheduleProgress"
                android:background="@drawable/add_draw"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>