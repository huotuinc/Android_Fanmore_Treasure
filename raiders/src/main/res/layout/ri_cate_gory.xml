<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_white"
    tools:context=".ui.product.CateGoryActivity">
    <RelativeLayout
        android:id="@+id/titleLayoutL"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <include
            layout="@layout/layout_title"/>
        </RelativeLayout>
    <LinearLayout
        android:layout_below="@+id/titleLayoutL"
        android:id="@+id/allL"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/home_catagory_lb"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全部商品"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:textSize="18sp"/>
    </LinearLayout>
    <TextView
        android:layout_marginLeft="50dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_gray"/>
    <TextView
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="分类浏览"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_gray"/>
    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/cateList"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:divider="@color/driver_color"
        android:dividerHeight="1px" />
</LinearLayout>
