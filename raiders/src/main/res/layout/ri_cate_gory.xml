<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_white"
    tools:context=".ui.product.CateGoryActivity">
    <RelativeLayout
        android:id="@+id/titleLayoutL"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <include
            layout="@layout/layout_title"/>
        </RelativeLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/searchL"
        android:orientation="horizontal"
        android:padding="10dp">
        <EditText
            android:id="@+id/search"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/search_height"
            android:background="@drawable/searchbg_catagory"
            android:drawableLeft="@mipmap/search_in_result"
            android:gravity="left|center_vertical"
            android:hint="  输入关键字"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColorHint="@color/text_gray"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:textSize="@dimen/text_size_12"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/allL"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/home_catagory_lb"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全部商品"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:textSize="18sp"/>
    </LinearLayout>
    <TextView
        android:layout_marginLeft="50dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_gray"/>
    <TextView
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="分类浏览"
        android:textColor="#31313c"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_gray"/>
    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/cateList"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:divider="@color/driver_color"
        android:dividerHeight="1px" />
</LinearLayout>
