<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white">
    <RelativeLayout
        android:id="@+id/titleLayoutL"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <include
            layout="@layout/layout_title"/>
    </RelativeLayout>
    <com.handmark.pulltorefresh.library.PullToRefreshScrollView
        xmlns:ptr= "http://schemas.android.com/apk/res-auto"
        android:id="@+id/orderDetailRefresh"
        android:layout_below="@+id/titleLayoutL"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        ptr:ptrAnimationStyle= "flip"
        android:background="@color/account_bg">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/orderDetailL"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white">
                <TextView
                    android:id="@+id/orderTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_size_16"
                    android:text=""/>
                <TextView
                    android:id="@+id/shareUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/orderTitle"
                    android:layout_alignLeft="@+id/orderTitle"
                    android:layout_marginTop="5dp"
                    android:text=""
                    android:textColor="@color/title_bg"
                    android:textSize="@dimen/text_size_14"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/shareTime"
                    android:layout_alignParentRight="true"
                    android:layout_alignBaseline="@+id/shareUserName"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_size_14"
                    android:text=""/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/productDetailL"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/productName"
                    android:text=""
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="@dimen/text_size_14"
                    android:textColor="@color/text_gray" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/productIusse"
                    android:layout_below="@+id/productName"
                    android:text=""
                    android:textSize="@dimen/text_size_14"
                    android:textColor="@color/text_gray" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/partners"
                    android:layout_below="@+id/productIusse"
                    android:text=""
                    android:textSize="@dimen/text_size_14"
                    android:textColor="@color/text_gray" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/luckyNo"
                    android:layout_below="@+id/partners"
                    android:text=""
                    android:textSize="@dimen/text_size_14"
                    android:textColor="@color/text_gray" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/announcedTime"
                    android:layout_below="@+id/luckyNo"
                    android:text=""
                    android:textSize="@dimen/text_size_14"
                    android:textColor="@color/text_gray" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/orderConL"
                android:padding="5dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/orderCon"
                    android:text=""
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_size_14"
                    android:maxLines="3"
                    android:ellipsize="end"/>
                <LinearLayout
                    android:id="@+id/orderImgs"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/orderCon"
                    android:orientation="vertical">
                    <!--动态加载晒单图片-->

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </com.handmark.pulltorefresh.library.PullToRefreshScrollView>
</RelativeLayout>