<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:padding="5dp">
    <RelativeLayout
        android:layout_alignParentLeft="true"
        android:id="@+id/productIcon"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:padding="5dp">
        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/icon_size_4"
            android:layout_height="@dimen/icon_size_4" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/productTag"
            android:layout_alignTop="@+id/icon"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_size_10"/>
    </RelativeLayout>
    <RelativeLayout
        android:padding="5dp"
        android:id="@+id/productDetal"
        android:layout_toRightOf="@+id/productIcon"
        android:layout_toLeftOf="@+id/productContorl"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <TextView
            android:id="@+id/productName"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="sss"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/text_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ProgressBar
            android:id="@+id/lotteryScheduleProgress"
            android:layout_below="@+id/productName"
            android:layout_marginTop="3dp"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="fill_parent"
            android:layout_height="8dp"
            android:max="100"
            android:progress="50"
            android:progressDrawable="@drawable/progress_draw"/>
        <TextView
            android:id="@+id/totalRequired"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_size_14"
            android:layout_below="@+id/lotteryScheduleProgress"
            android:layout_marginTop="3dp"
            android:text="asas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/surplus"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_size_14"
            android:text="asas"
            android:layout_alignBaseline="@+id/totalRequired"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:padding="5dp"
        android:id="@+id/productContorl"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@+id/productDetal"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent">
        <TextView
            android:id="@+id/addBtn"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加入清单"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="@color/deep_red"
            android:background="@drawable/add_draw"/>
    </RelativeLayout>
</RelativeLayout>