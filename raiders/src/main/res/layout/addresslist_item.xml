<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/color_white"
    android:layout_height="match_parent"
    android:padding="5dp">
    <TextView
        android:layout_width="@dimen/common_icon_size_4"
        android:layout_height="@dimen/common_icon_size_4"
        android:id="@+id/editBtn"
        android:layout_marginRight="5dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"/>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_toRightOf="@+id/editBtn"
        android:layout_toLeftOf="@+id/editIcon">
        <TextView
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:id="@+id/receiver"
            android:text="收货人姓名"/>
        <TextView
            android:id="@+id/mobile"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="64645654654" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/isDefault"
            android:layout_alignLeft="@+id/receiver"
            android:layout_below="@+id/receiver"
            android:textColor="@color/color_blue"
            android:text="[默认]"/>
        <TextView
            android:id="@+id/details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:layout_toRightOf="@+id/isDefault"
            android:layout_below="@+id/receiver"
            android:layout_marginLeft="10dp"
            android:text="收货地址收货地址收货地址收货地址收货地址收货地址收货地址收货地址收货地址收货地址收货地址收货地址收货地址收货地址收货地址收货地址"/>
    </RelativeLayout>
    <TextView
        android:layout_width="@dimen/common_icon_size_4"
        android:layout_height="@dimen/common_icon_size_4"
        android:id="@+id/editIcon"
        android:layout_marginLeft="5dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"/>
</RelativeLayout>