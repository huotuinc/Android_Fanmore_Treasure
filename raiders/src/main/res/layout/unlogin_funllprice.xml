<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/account_bg"
    android:padding="5dp">
    <!--方式一-->
    <RelativeLayout
        android:id="@+id/model1L"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/product_detail_top">
        <TextView
            android:id="@+id/mode_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="方式1"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_size_12"
            android:background="@mipmap/full_price_bg"/>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp">
            <TextView
                android:id="@+id/fullPriceLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全价购买"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_16"/>
            <TextView
                android:id="@+id/fullPriceDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/fullPriceLabel"
                android:layout_toRightOf="@+id/fullPriceLabel"
                android:layout_marginLeft="10dp"
                android:text="库存紧张"
                android:textColor="@color/title_bg"
                android:textSize="@dimen/text_size_14"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fullPriceTip"
                android:layout_below="@+id/fullPriceLabel"
                android:layout_marginTop="5dp"
                android:text="无需等待，直接获得商品"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/text_size_14"/>
            <TextView
                android:id="@+id/fullPriceMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fullPriceTip"
                android:layout_marginTop="5dp"
                android:textColor="@color/title_bg"
                android:textSize="@dimen/text_size_22"
                android:text="¥5800"/>
            <TextView
                android:layout_width="@dimen/common_btn_width_1"
                android:layout_height="@dimen/common_btn_height_1"
                android:id="@+id/settlementBtn"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="结算"
                android:gravity="center"
                android:textColor="@color/color_white"
                android:textSize="@dimen/text_size_16"
                android:background="@drawable/button_common_1"/>
        </RelativeLayout>
    </RelativeLayout>
    <!--方式一-->
    <!--方式二-->
    <RelativeLayout
        android:id="@+id/model2L"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingBottom="5dp"
        android:layout_below="@+id/model1L"
        android:background="@drawable/product_detail_top">
        <TextView
            android:id="@+id/mode_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="方式2"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_size_12"
            android:background="@mipmap/full_price_bg"/>
        <RelativeLayout
            android:id="@+id/model2Left"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/model2Right"
            android:padding="10dp">
            <TextView
                android:id="@+id/oneLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1元夺宝"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_16"/>
            <TextView
                android:id="@+id/fullPriceDesc1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/oneLabel"
                android:layout_toRightOf="@+id/oneLabel"
                android:layout_marginLeft="10dp"
                android:text="库存紧张"
                android:textColor="@color/title_bg"
                android:textSize="@dimen/text_size_14"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fullPriceTip2"
                android:layout_below="@+id/oneLabel"
                android:layout_marginTop="5dp"
                android:text="只需1元就有机会获得商品"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/text_size_14"/>
            <TextView
                android:id="@+id/noLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="期号：12345"
                android:layout_below="@+id/fullPriceTip2"
                android:textColor="@color/color_gray"
                android:textSize="@dimen/text_size_14"/>
            <ProgressBar
                android:id="@+id/partnerProgress"
                android:layout_below="@+id/noLabel"
                android:layout_marginTop="5dp"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="fill_parent"
                android:layout_height="8dp"
                android:max="100"
                android:progress="50"
                android:progressDrawable="@drawable/progress_draw"/>
            <TextView
                android:id="@+id/totalRequiredLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/partnerProgress"
                android:layout_marginTop="5dp"
                android:layout_alignParentLeft="true"
                android:text="总需人数：1234次"
                android:textColor="@color/color_gray"
                android:textSize="@dimen/text_size_14"/>
            <TextView
                android:id="@+id/surplusLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/partnerProgress"
                android:layout_marginTop="5dp"
                android:layout_alignParentRight="true"
                android:text="剩余：123"
                android:textColor="@color/color_gray"
                android:textSize="@dimen/text_size_14"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/model2Right"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp">
            <TextView
                android:layout_width="@dimen/common_btn_width_1"
                android:layout_height="@dimen/common_btn_height_1"
                android:id="@+id/buyBtn"
                android:layout_centerHorizontal="true"
                android:text="1元抢购"
                android:gravity="center"
                android:textColor="@color/color_white"
                android:textSize="@dimen/text_size_16"
                android:background="@drawable/button_common_1"/>
            <TextView
                android:layout_width="@dimen/common_btn_width_1"
                android:layout_height="@dimen/common_btn_height_1"
                android:id="@+id/addCartBtn"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/buyBtn"
                android:layout_marginTop="20dp"
                android:text="加入清单"
                android:gravity="center"
                android:textColor="@color/title_bg"
                android:textSize="@dimen/text_size_16"
                android:background="@drawable/button_common_2"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/partner_area_height"
            android:paddingLeft="25dp"
            android:layout_below="@+id/model2Left"
            android:paddingRight="25dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@drawable/partner_area_draw">
            <TextView
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/noLoginTip"
                android:text="您没有参加本期夺宝哦！"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/text_size_16"/>
        </RelativeLayout>
    </RelativeLayout>
    <!--方式二-->
</RelativeLayout>