<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/Rl1"
    android:background="@color/color_white"
    android:padding="5dp">
    <RelativeLayout
        android:layout_alignParentLeft="true"
        android:id="@+id/rediconL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <ImageView
            android:id="@+id/redicon"
            android:background="@mipmap/hb_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:id="@+id/minusMoney"
            android:textSize="22sp"
            android:textColor="@color/progress"
            android:layout_centerInParent="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_alignBaseline="@+id/minusMoney"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/minusMoney"
            android:textColor="@color/progress"
            android:text="元"/>
        <TextView
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="满10元可用"
            android:id="@+id/fullMoney"
            android:textSize="11sp"
            android:layout_alignBottom="@+id/redicon"
            android:layout_marginBottom="5dp"/>
    </RelativeLayout>
    <RelativeLayout
       android:layout_toLeftOf="@+id/geneiconL"
        android:padding="5dp"
        android:id="@+id/productDetal"
        android:layout_toRightOf="@+id/rediconL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="粉猫夺宝红包"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/text_black"
            android:id="@+id/redName"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/startTime"
            android:layout_marginTop="3dp"
            android:layout_below="@+id/redName"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_size_16"
            android:text="生效期:2016-01-13 11:56:44"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/endTime"
            android:layout_below="@+id/startTime"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_size_16"
            android:text="有效期:2016-01-15 11:56:44"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/remark"
            android:layout_below="@+id/endTime"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_size_16"
            android:text="单次支付满10元可以使用(使用于夺宝类所有商品)"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/geneiconL"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <ImageView
            android:id="@+id/goneicon"
            android:background="@mipmap/guoqi"
            android:layout_width="@dimen/icon_size_4"
            android:layout_height="@dimen/icon_size_4" />
    </RelativeLayout>

<TextView
    android:layout_width="match_parent"
    android:layout_height="1px"
    android:layout_marginTop="5dp"
    android:background="@color/text_gray"
    android:layout_below="@+id/productDetal"/>
</RelativeLayout>
